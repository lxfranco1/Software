<WelcomeScreen>:
    FloatLayout:
        MDRoundFlatButton:
            id: log_in_button
            size_hint: .4, .06
            pos_hint: {"top": .4, "center_x": .5}
            md_bg_color: app.theme_cls.primary_color
            text_color: app.theme_cls.text_color
            #font_size: '30sp'
            text: "Sign In"
            on_release:
                root.parent.current = "sign_in_screen"

        MDRoundFlatButton:
            id: create_account_button
            size_hint: .4, .06
            pos_hint: {"top": .325, "center_x": .5}
            md_bg_color: app.theme_cls.primary_color
            text_color: app.theme_cls.text_color
            #font_size: '30sp'
            text: "Create Account"
            on_release:
                root.parent.current = "create_account_screen"


